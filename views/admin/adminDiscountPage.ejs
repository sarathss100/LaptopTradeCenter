<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1;
      }
      .full-width {
        width: 100%;
      }
      .full-height {
        height: 100%;
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Navbar Section -->
    <div class="shadow-xl">
      <nav class="flex items-center p-6 shadow-lg bg-white">
        <div class="flex items-center flex-grow">
          <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
          <p class="text-2xl font-sans font-medium ml-2">LTC</p>
        </div>
        <div class="flex items-center">
          <button class="flex items-center text-gray-700">
            <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
            <p class="pl-2 pr-2">Admin</p>
            <img
              src="/images/dropdown_icon.svg"
              alt="Dropdown Icon"
              class="h-4 w-4"
              onclick="toggleDropdown()"
            />
          </button>
          <div class="mt-2 ml-2">
            <div
              id="dropdownMenu"
              class="absolute right-0 mt-10 w-48 bg-white border rounded-lg shadow-lg invisible"
            >
              <a
                href="/admin/logout"
                class="block px-2 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >Logout</a
              >
            </div>
          </div>
        </div>
      </nav>
    </div>

    <!-- Main Content Section -->
    <div class="flex flex-grow">
      <!-- Side bar Section -->
      <%- include('components/sidebar') %>

      <!-- Modal -->

      <div
        id="popup-modal"
        tabindex="-1"
        class="hidden fixed top-10 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-md"
      >
        <div class="relative p-4 w-full max-w-md max-h-full">
          <div class="relative bg-gray-300 rounded-lg shadow">
            <!-- Close button -->
            <button
              type="button"
              class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-black rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center"
              onclick="confirmDelete(false)"
            >
              <svg
                class="w-3 h-3"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 14"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                />
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
            <!-- Modal content -->
            <div class="p-4 md:p-5 text-center">
              <svg
                class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 20 20"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                />
              </svg>
              <h3
                class="mb-5 text-lg font-normal text-gray-500zzzzzz dark:text-gray-400"
              >
                Are you sure you want to delete the discount?
              </h3>
              <button
                type="button"
                class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center"
                onclick="confirmDeletion()"
              >
                Yes, I'm sure
              </button>
              <button
                type="button"
                class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
                onclick="toggleModal(false)"
              >
                No, cancel
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <main class="w-4/5 m-6 flex flex-col">
        <% if ( purpose === 'edit' ) { %>
        <div class="flex justify-between items-center mb-6">
          <div class="text-2xl font-bold">Update Discount</div>
        </div>
        <form
          action="/admin/editDiscountForm/<%= discount[0]._id %>"
          method="post"
        >
          <div class="grid grid-cols-1 gap-4 mb-4">
            <div>
              <label for="discount_percentage" class="block text-gray-700"
                >Discount Percentage</label
              >
              <input
                type="text"
                name="discount_percentage"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=discount[0].discount_percentage%>"
              />
            </div>
            <div>
              <label for="discount_expiration" class="block text-gray-700"
                >Discount Expiration</label
              >
              <input
                type="date"
                name="discount_expiration"
                class="w-full p-2 border shadow-xl rounded"
                value="<%= discount[0].discount_expiration.toISOString().substring(0, 10) %>"
              />
            </div>
          </div>

          <button
            type="submit"
            class="bg-submit-button text-white px-4 py-2 shadow-xl rounded"
          >
            Update Discount
          </button>
        </form>
        <% } else { %>
        <div class="flex justify-between items-center mb-6">
          <div class="text-2xl font-bold">Add Discount</div>
        </div>
        <form action="/admin/addDiscountForm" method="post">
          <div class="grid grid-cols-1 gap-4 mb-4">
            <div>
              <label for="discount_percentage" class="block text-gray-700"
                >Discount percentage</label
              >
              <input
                type="text"
                name="discount_percentage"
                class="w-full p-2 border shadow-xl rounded"
                placeholder="Discount percentage"
              />
            </div>
            <div>
              <label for="discount_expiration" class="block text-gray-700"
                >Discount Expiration</label
              >
              <input
                type="date"
                name="discount_expiration"
                class="w-full p-2 border shadow-xl rounded"
                placeholder="Discount Expiration"
              />
            </div>
          </div>

          <button
            type="submit"
            class="bg-submit-button text-white px-4 py-2 shadow-xl rounded"
          >
            Add Discount
          </button>
        </form>
        <% } %>

        <div class="flex justify-between items-center mb-6 mt-6">
          <div class="text-2xl font-bold">Discounts List</div>
        </div>

        <div class="mt-1 flex-grow">
          <table class="min-w-full bg-white border text-center shadow-xl">
            <thead>
              <tr>
                <th class="px-4 py-2 border">Product Brand</th>
                <th class="px-4 py-2 border">Product Model</th>
                <th class="px-4 py-2 border">Discount Percentage</th>
                <th class="px-4 py-2 border">Discount Expiration</th>
                <th class="px-4 py-2 border">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for ( let i = 0; i < discount.length; i++ ) { %>
              <tr>
                <td class="px-4 py-2 border">All</td>
                <td class="px-4 py-2 border">All</td>
                <td class="px-4 py-2 border">
                  <%= discount[i].discount_percentage%>
                </td>
                <td class="px-4 py-2 border">
                  <%= discount[i].discount_expiration%>
                </td>
                <td class="px-4 py-2 border">
                  <a
                    href="/admin/editDiscountPage/<%= discount[i]._id %>"
                    class="bg-yellow-300 text-black px-2 py-1 rounded inline-block"
                  >
                    Edit
                  </a>

                  <button
                    data-modal-target="popup-modal"
                    data-modal-toggle="popup-modal"
                    class="bg-red-500 text-white px-2 py-1 rounded"
                    onclick="confirmDelete('<%=discount[i]._id%>')"
                  >
                    Delete
                  </button>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </main>
    </div>

    <!-- Footer Section -->
    <footer class="flex items-center justify-center bg-black text-white h-24">
      <p>@ 2024 Laptoptradecenter.com</p>
    </footer>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };
    </script>
  </body>
</html>
