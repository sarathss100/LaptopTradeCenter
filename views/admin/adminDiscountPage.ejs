<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1;
      }
      .full-width {
        width: 100%;
      }
      .full-height {
        height: 100%;
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Navbar Section -->
    <div class="shadow-xl">
      <nav class="flex items-center p-6 shadow-lg bg-white">
        <div class="flex items-center flex-grow">
          <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
          <p class="text-2xl font-sans font-medium ml-2">LTC</p>
        </div>
        <div class="flex items-center">
          <button class="flex items-center text-gray-700">
            <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
            <p class="pl-2 pr-2">Admin</p>
            <img
              src="/images/dropdown_icon.svg"
              alt="Dropdown Icon"
              class="h-4 w-4"
              onclick="toggleDropdown()"
            />
          </button>
          <div class="mt-2 ml-2">
            <div
              id="dropdownMenu"
              class="absolute right-0 mt-10 w-48 bg-white border rounded-lg shadow-lg invisible"
            >
              <a
                href="/admin/logout"
                class="block px-2 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >Logout</a
              >
            </div>
          </div>
        </div>
      </nav>
    </div>

    <!-- Main Content Section -->
    <div class="flex flex-grow">
      <!-- Side bar Section -->
      <%- include('components/sidebar') %>

      <!-- Main Content -->
      <main class="w-4/5 m-6 flex flex-col">
        <div class="flex justify-between items-center mb-6">
          <div class="text-2xl font-bold">Add Discount</div>
        </div>
        <form action="#" method="post" enctype="multipart/form-data">
          <div class="grid grid-cols-1 gap-4 mb-4">
            <div>
              <label for="product_brand" class="block text-gray-700"
                >Product brand</label
              >
              <input
                type="text"
                name="product_brand"
                class="w-full p-2 border shadow-xl rounded"
                placeholder="Product Brand"
              />
            </div>
            <div>
              <label for="product_model" class="block text-gray-700"
                >Product Model</label
              >
              <input
                type="text"
                name="product_model"
                class="w-full p-2 border shadow-xl rounded"
                placeholder="Product Model"
              />
            </div>
            <div>
              <label for="discount_percentage" class="block text-gray-700"
                >Discount percentage</label
              >
              <input
                type="text"
                name="discount_percentage"
                class="w-full p-2 border shadow-xl rounded"
                placeholder="Discount percentage"
              />
            </div>
            <div>
              <label for="discount_expiration" class="block text-gray-700"
                >Discount Expiration</label
              >
              <input
                type="text"
                name="discount_expiration"
                class="w-full p-2 border shadow-xl rounded"
                placeholder="Discount Expiration"
              />
            </div>
          </div>

          <button
            type="submit"
            class="bg-submit-button text-white px-4 py-2 shadow-xl rounded"
          >
            Add Discount
          </button>
        </form>
        <div class="flex justify-between items-center mb-6 mt-6">
          <div class="text-2xl font-bold">Discounts List</div>
        </div>
        <div class="mt-1 flex-grow">
          <table class="min-w-full bg-white border text-center shadow-xl">
            <thead>
              <tr>
                <th class="px-4 py-2 border">Product Brand</th>
                <th class="px-4 py-2 border">Product Model</th>
                <th class="px-4 py-2 border">Discount Percentage</th>
                <th class="px-4 py-2 border">Discount Expiration</th>
                <th class="px-4 py-2 border">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="px-4 py-2 border">Brand</td>
                <td class="px-4 py-2 border">Model</td>
                <td class="px-4 py-2 border">Percentage</td>
                <td class="px-4 py-2 border">Expiration</td>
                <td class="px-4 py-2 border">
                  <button class="bg-yellow-300 text-black px-2 py-1 rounded">
                    <a href="#"> Edit </a>
                  </button>
                  <button class="bg-red-500 text-white px-2 py-1 rounded">
                    Delete
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </main>
    </div>

    <!-- Footer Section -->
    <footer class="flex items-center justify-center bg-black text-white h-24">
      <p>@ 2024 Laptoptradecenter.com</p>
    </footer>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };
    </script>
  </body>
</html>
