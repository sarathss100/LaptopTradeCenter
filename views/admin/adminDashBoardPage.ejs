<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
    </style>
  </head>
  <body class="h-screen flex flex-col">
    <!-- Navbar Section -->
    <nav class="flex items-center justify-between p-6 shadow-lg bg-white">
      <div class="flex items-center">
        <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
        <p class="text-2xl font-sans font-medium ml-2">LTC</p>
      </div>
      <div class="flex items-center">
        <button class="flex items-center text-gray-700">
          <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
          <p class="pl-2 pr-2">Admin</p>
          <img
            src="/images/dropdown_icon.svg"
            alt="Dropdown Icon"
            class="h-4 w-4"
            onclick="toggleDropdown()"
          />
        </button>
        <div class="mt-2 ml-2">
          <div
            id="dropdownMenu"
            class="absolute right-0 mt-10 w-48 bg-white border rounded-lg shadow-lg invisible"
          >
            <a
              href="/admin/logout"
              class="block px-2 py-2 text-gray-800 hover:bg-gray-200 text-center"
              >Logout</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content Section -->
    <div class="flex-grow flex mt-2">
      <!-- Sidebar -->
      <div class="w-1/5 bg-white p-5">
        <ul class="w-full">
          <li class="w-full mb-4"><a href="/admin/dashboard">Dashboard</a></li>
          <li class="w-full mb-4"><a href="/admin/customersPage">Customers</a></li>
          <li class="mb-4">
            <a href="/admin/productsPage" class="text-gray-700">Products</a>
          </li>
          <li class="mb-4"><a href="#" class="text-gray-700">Order List</a></li>
          <li class="mb-4"><a href="#" class="text-gray-700">Banner</a></li>
          <li class="mb-4"><a href="#" class="text-gray-700">Discounts</a></li>
          <li class="mb-4">
            <a href="#" class="text-gray-700">Sales Report</a>
          </li>
          <li class="mb-4"><a href="#" class="text-gray-700">Coupons</a></li>
          <li class="mb-4"><a href="#" class="text-gray-700">Settings</a></li>
        </ul>
      </div>
      <div class="flex align-items justify-center">
        <h1>Dashboard</h1>
      </div>
    </div>

    <!-- Footer Section -->
    <footer class="flex items-center justify-center bg-black text-white h-24">
      <p>@ 2024 Laptoptradecenter.com</p>
    </footer>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };
    </script>
  </body>
</html>
