<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1;
      }
      .full-width {
        width: 100%;
      }
      .full-height {
        height: 100%;
      }
      footer {
        flex-shrink: 0; /* Prevents the footer from shrinking */
        height: 80px; /* Sets a consistent height for the footer */
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Navbar Section -->
    <div class="shadow-xl">
      <nav class="flex items-center p-6 shadow-lg bg-white">
        <div class="flex items-center flex-grow">
          <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
          <p class="text-2xl font-sans font-medium ml-2">LTC</p>
        </div>
        <div class="flex items-center">
          <button class="flex items-center text-gray-700">
            <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
            <p class="pl-2 pr-2">Admin</p>
            <img
              src="/images/dropdown_icon.svg"
              alt="Dropdown Icon"
              class="h-4 w-4"
              onclick="toggleDropdown()"
            />
          </button>
          <div class="mt-2 ml-2">
            <div
              id="dropdownMenu"
              class="absolute right-0 mt-10 w-48 bg-white border rounded-lg shadow-lg invisible"
            >
              <a
                href="/admin/logout"
                class="block px-2 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >Logout</a
              >
            </div>
          </div>
        </div>
      </nav>
    </div>

    <!-- Main Content Section -->
    <div class="flex flex-grow">
      <!-- Side bar Section -->
      <%- include('components/sidebar') %>

      <!-- Main Content -->
      <div class="w-4/5 m-6 flex flex-col">
        <div class="mb-6 items-end">
          <h2 class="text-3xl font-bold">Brands</h2>
        </div>
        <div class="mt-1 flex-grow">
          <table class="min-w-full bg-white border text-center shadow-xl">
            <thead>
              <tr>
                <th class="px-4 py-2 border">Brand Name</th>
                <th class="px-4 py-2 border">Models</th>
                <th class="px-4 py-2 border">Inventory</th>
                <th class="px-4 py-2 border">Status</th>
                <th class="px-4 py-2 border">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for ( let i = 0; i < brandsCategory.length; i++ ) { %>
              <tr>
                <td class="px-4 py-2 border">
                  <%=brandsCategory[i].brand_name%>
                </td>

                <td class="px-4 py-2 border">
                  <% for ( let j = 0; j < brandsCategory[i].products.length; j++
                  ) { %>
                  <li><%=brandsCategory[i].products[j].product_name%></li>
                  <% } %>
                </td>

                <td class="px-4 py-2 border">
                  <% for ( let k = 0; k < brandsCategory[i].products.length; k++
                  ) { %>
                  <li><%=brandsCategory[i].products[k].product_quantity%></li>
                  <% } %>
                </td>

                <% if ( brandsCategory[i].isBlocked === true ) { %>
                <td class="px-4 py-2 border">Blocked</td>
                <% } else { %>
                <td class="px-4 py-2 border">Unblocked</td>
                <% } %>
                <td class="px-4 py-2 border">
                  <button
                    class="bg-red-500 text-white px-2 py-1 rounded"
                    onclick="confirmBlock('<%=brandsCategory[i]._id%>')"
                  >
                    Block
                  </button>
                  <button
                    class="bg-submit-button text-white px-2 py-1 rounded"
                    onclick="confirmunBlock('<%=brandsCategory[i]._id%>')"
                  >
                    Unblock
                  </button>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Pagination Controls -->
    <div class="flex justify-center mb-6">
      <% if (currentPage > 1) { %>
      <a
        href="/admin/brandsPage?page=<%= currentPage - 1 %>&limit=10"
        class="px-4 py-2 bg-gray-300 text-gray-800 rounded mx-1"
        >Previous</a
      >
      <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
      <a
        href="/admin/brandsPage?page=<%= i %>&limit=10"
        class="px-4 py-2 <%= currentPage === i ? 'bg-blue-500 text-white' : 'bg-gray-300 text-gray-800' %> rounded mx-1"
        ><%= i %></a
      >
      <% } %> <% if (currentPage < totalPages) { %>
      <a
        href="/admin/brandsPage?page=<%= currentPage + 1 %>&limit=10"
        class="px-4 py-2 bg-gray-300 text-gray-800 rounded mx-1"
        >Next</a
      >
      <% } %>
    </div>

    <!-- Footer Section -->
    <footer class="flex items-center justify-center bg-black text-white h-24">
      <p>@ 2024 Laptoptradecenter.com</p>
    </footer>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };

      const confirmBlock = (brandId) => {
        if (confirm("Are you sure you want to block this brand?")) {
          fetch(`/admin/blockBrand/${brandId}`, {
            method: "put",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert(`Brand was successfully blocked`);
                window.location.href = "/admin/brandsPage";
              } else {
                alert("Error: " + data.message);
              }
            })
            .catch((error) => console.error("Error:", error));
        }
      };

      const confirmunBlock = (brandId) => {
        if (confirm("Are you sure you want to block this brand?")) {
          fetch(`/admin/unblockBrand/${brandId}`, {
            method: "put",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert(`Brand was successfully unblocked`);
                window.location.href = "/admin/brandsPage";
              } else {
                alert("Error: " + data.message);
              }
            })
            .catch((error) => console.error("Error:", error));
        }
      };
    </script>
  </body>
</html>
