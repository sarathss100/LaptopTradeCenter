<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
    </style>
  </head>
  <body class="h-screen flex flex-col">
    <!-- Navbar Section -->
    <nav class="flex items-center justify-between p-6 shadow-lg bg-white">
      <div class="flex items-center">
        <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
        <p class="text-2xl font-sans font-medium ml-2">LTC</p>
      </div>
      <div class="flex items-center">
        <button class="flex items-center text-gray-700">
          <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
          <p class="pl-2 pr-2">Admin</p>
          <img
            src="/images/dropdown_icon.svg"
            alt="Dropdown Icon"
            class="h-4 w-4"
            onclick="toggleDropdown()"
          />
        </button>
        <div class="mt-2 ml-2">
          <div
            id="dropdownMenu"
            class="absolute right-0 mt-10 w-48 bg-white border rounded-lg shadow-lg invisible"
          >
            <a
              href="/admin/logout"
              class="block px-2 py-2 text-gray-800 hover:bg-gray-200 text-center"
              >Logout</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content Section -->
    <div class="flex-grow flex mt-2">
      <!-- Sidebar -->
      <div class="w-1/5 bg-white p-5">
        <ul class="w-full">
          <li class="w-full mb-4"><a href="/admin/dashboard">Dashboard</a></li>
          <li class="w-full mb-4"><a href="#">Customers</a></li>
          <li class="mb-4">
            <a href="/admin/productsPage" class="text-gray-700">Products</a>
          </li>
          <li class="mb-4"><a href="#" class="text-gray-700">Order List</a></li>
          <li class="mb-4"><a href="#" class="text-gray-700">Banner</a></li>
          <li class="mb-4"><a href="#" class="text-gray-700">Discounts</a></li>
          <li class="mb-4">
            <a href="#" class="text-gray-700">Sales Report</a>
          </li>
          <li class="mb-4"><a href="#" class="text-gray-700">Coupons</a></li>
          <li class="mb-4"><a href="#" class="text-gray-700">Settings</a></li>
        </ul>
      </div>

      <!-- Main Content -->
       
      <div class="w-4/5 p-8">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-3xl font-bold">Customers</h2>
        </div>
        <div class="mt-6">
          <table class="min-w-full bg-white border text-center shadow-xl">
            <thead>
              <tr>
                <th class="px-4 py-2 border">Customer Name</th>
                <th class="px-4 py-2 border">Customer Email</th>
                <th class="px-4 py-2 border">Customer Phone</th>
                <th class="px-4 py-2 border">Joined Date</th>
                <th class="px-4 py-2 border">Status</th>
                <th class="px-4 py-2 border">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for ( const data of customers ) { %>
              <tr>
                <td class="px-4 py-2 border"><%= data.first_name %></td>
                <td class="px-4 py-2 border">
                  <%=data.email%> 
                </td>
                <td class="px-4 py-2 border">+91-<%= data.phone_number %></td>
                <td class="px-4 py-2 border"><%= data.joined_date %></td>
                <td class="px-4 py-2 border"><%=data.isBlocked%></td>
                <td class="px-4 py-2 border">
    
                  <button
                    class="bg-red-500 text-white px-2 py-1 rounded"
                    onclick="confirmBlock('<%=data._id%>')"
                  >
                    Block
                  </button>
                  <button
                    class="bg-submit-button text-white px-2 py-1 rounded"
                    onclick="confirmUnblock('<%=data._id%>')"
                  >
                    UnBlock
                  </button>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

     <!-- Pagination Controls -->
        <div class="flex justify-center mb-6">
          <% if (currentPage > 1) { %>
          <a
            href="/admin/productsPage?page=<%= currentPage - 1 %>&limit=10"
            class="px-4 py-2 bg-gray-300 text-gray-800 rounded mx-1"
            >Previous</a
          >
          <% } %>
          <% for (let i = 1; i <= totalPages; i++) { %>
          <a
            href="/admin/productsPage?page=<%= i %>&limit=10"
            class="px-4 py-2 <%= currentPage === i ? 'bg-blue-500 text-white' : 'bg-gray-300 text-gray-800' %> rounded mx-1"
            ><%= i %></a
          >
          <% } %>
          <% if (currentPage < totalPages) { %>
          <a
            href="/admin/productsPage?page=<%= currentPage + 1 %>&limit=10"
            class="px-4 py-2 bg-gray-300 text-gray-800 rounded mx-1"
            >Next</a
          >
          <% } %>
        </div>
      </div>
    </div>

    <!-- Footer Section -->
    <footer class="flex items-center justify-center bg-black text-white h-24">
      <p>@ 2024 Laptoptradecenter.com</p>
    </footer>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };

      const confirmDelete = (productId) => {
        if (confirm("Are you sure you want to delete this product?")) {
          fetch(`/admin/productDelete/${Id}`, {
            method: "DELETE",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert(`Product was successfully deleted`);
                window.location.href = "/admin/productsPage"; // Redirect to the products page
              } else {
                alert("Error: " + data.message);
              }
            })
            .catch((error) => console.error("Error:", error));
        }
      };

      const confirmBlock = ( customerId ) => {
        if (confirm("Are you sure you want to block this customer?")) {
          fetch(`/admin/blockUser/${customerId}`, {
            method: "PUT",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert(`User was blocked successfully`);
                window.location.href = "/admin/customersPage"; // Redirect to the products page
              } else {
                alert("Error: " + data.message);
              }
            })
            .catch((error) => console.error("Error:", error));
        }
      };

      const confirmUnblock = ( customerId ) => {
        if (confirm("Are you sure you want to Unblock this customer?")) {
          fetch(`/admin/unblockUser/${customerId}`, {
            method: "PUT",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert(`User was Unblocked successfully`);
                window.location.href = "/admin/customersPage"; // Redirect to the products page
              } else {
                alert("Error: " + data.message);
              }
            })
            .catch((error) => console.error("Error:", error));
        }
      };
    </script>
  </body>
</html>
