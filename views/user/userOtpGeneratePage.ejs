<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
    </style>
  </head>
  <body class="h-screen flex flex-col justify-between">
    <!-- Navbar Section -->
    <nav class="flex items-center justify-between p-6 shadow-lg bg-white">
      <div class="flex items-center">
        <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
        <p class="text-2xl font-sans font-medium ml-2">LTC</p>
      </div>
      <div class="flex items-center">
        <button class="flex items-center text-gray-700">
          <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
          <p class="pl-2 pr-2">Login</p>
          <img
            src="/images/dropdown_icon.svg"
            alt="Dropdown Icon"
            class="h-4 w-4"
            onclick="toggleDropdown()"
          />
        </button>
        <div class="ml-2">
          <div
            id="dropdownMenu"
            class="absolute right-0 mt-8 w-48 bg-white border rounded-lg shadow-lg invisible"
          >
            <a
              href="/user/signUpPage"
              class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
              >Create an account</a
            >
            <a
              href="/user/passwordResetPage"
              class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
              >Reset Password</a
            >
          </div>
        </div>
      </div>
    </nav>

    <div
      class="hidden fixed inset-0 px-4 flex flex-wrap justify-center items-center w-full h-full z-[1000] before:fixed before:inset-0 before:w-full before:h-full before:bg-[rgba(0,0,0,0.5)] overflow-auto font-[sans-serif]"
    >
      <div class="w-full max-w-6xl mx-auto px-4 md:px-6 py-24 relative">
        <div class="flex justify-center">
          <div
            class="max-w-md mx-auto text-center bg-form-green px-4 sm:px-8 py-10 rounded-xl shadow"
          >
            <header class="mb-8">
              <h1 class="text-2xl font-bold mb-1">OTP Verification</h1>
              <p class="text-[15px] text-slate-500">
                Enter the 4-digit verification code that was sent to your email.
              </p>
            </header>
            <form id="otp-form">
              <div class="flex items-center justify-center gap-3">
                <input
                  type="text"
                  class="w-14 h-14 text-center text-2xl font-extrabold text-slate-900 bg-slate-100 border border-transparent hover:border-slate-200 appearance-none rounded p-4 outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100"
                  pattern="\d*"
                  maxlength="1"
                />
                <input
                  type="text"
                  class="w-14 h-14 text-center text-2xl font-extrabold text-slate-900 bg-slate-100 border border-transparent hover:border-slate-200 appearance-none rounded p-4 outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100"
                  maxlength="1"
                />
                <input
                  type="text"
                  class="w-14 h-14 text-center text-2xl font-extrabold text-slate-900 bg-slate-100 border border-transparent hover:border-slate-200 appearance-none rounded p-4 outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100"
                  maxlength="1"
                />
                <input
                  type="text"
                  class="w-14 h-14 text-center text-2xl font-extrabold text-slate-900 bg-slate-100 border border-transparent hover:border-slate-200 appearance-none rounded p-4 outline-none focus:bg-white focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100"
                  maxlength="1"
                />
              </div>
              <div class="max-w-[260px] mx-auto mt-4">
                <button
                  type="submit"
                  class="w-full inline-flex justify-center whitespace-nowrap rounded-lg bg-submit-button px-3.5 py-2.5 font-medium text-white shadow-sm shadow-indigo-950/10 hover:bg-green-600"
                >
                  Login
                </button>
              </div>
            </form>
            <div class="text-sm text-slate-500 mt-4">
              Didn't receive code?
              <a
                class="font-medium text-blue-600 hover:text-indigo-600"
                href="#0"
                >Resend</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Section -->

    <main class="flex-1 flex justify-center items-center">
      <div
        class="flex flex-col justify-center items-center bg-form-green rounded-2xl shadow-2xl p-8"
      >
        <form
          action="/user/generateOTP"
          method="post"
          class="flex flex-col justify-center max-w-md w-full"
        >
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            class="input-field m-4 text-lg p-8 text-center border-solid border-2 border-black rounded-full shadow-2xl"
            required
          />

          <input
            type="number"
            name="otp"
            placeholder="Enter the OTP"
            class="input-field m-4 text-lg p-8 text-center border-solid border-2 border-black rounded-full shadow-2xl"
          />

          <div class="flex justify-center">
            <% if ( userOtpLoginCredentialsError ) { %>
            <p class="text-red-600"><%=userOtpLoginCredentialsError%></p>
            <% } %>
          </div>

          <input
            type="submit"
            value="Submit"
            class="submit-button m-4 border-solid border-2 border-black bg-submit-button text-white rounded-full shadow-2xl"
          />
          <div class="flex justify-center">
            <button type="submit">Generate OTP</button>
          </div>
        </form>
      </div>
    </main>

    <!-- Footer Section -->
    <footer class="flex items-center justify-center bg-black text-white h-24">
      <p>@ 2024 Laptoptradecenter.com</p>
    </footer>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };
    </script>
  </body>
</html>
