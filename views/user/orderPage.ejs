<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1; /* This will allow the main section to take up the remaining space */
      }
      footer {
        flex-shrink: 0; /* Prevents the footer from shrinking */
        height: 80px; /* Sets a consistent height for the footer */
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Navbar Section -->
    <div class="flex flex-col shadow-xl justify-start">
      <nav class="flex items-center justify-between p-6 bg-white">
        <div class="flex items-center">
          <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
          <a href="/user/homePage"
            ><p class="text-2xl font-sans font-medium ml-2">LTC</p></a
          >
        </div>

        <div class="flex items-center">
          <form
            class="relative border-solid border-2 border-gray-300 rounded-full w-96 flex items-center"
          >
            <svg
              class="absolute left-3 h-4 w-4 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 26 26"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-4.35-4.35m1.24-4.65a7.5 7.5 0 10-10.5 0 7.5 7.5 0 0010.5 0z"
              ></path>
            </svg>
            <input
              type="search"
              name="search"
              placeholder="Search"
              class="pl-10 pr-4 py-1 w-full rounded-full focus:outline-none focus:ring-2 focus:ring-black"
            />
          </form>
          <form action="" method="post" class="h-4 border"></form>

          <button class="flex items-center ml-4 text-gray-700">
            <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
            <p class="pl-2 pr-2"><%=username%></p>
            <img
              src="/images/dropdown_icon.svg"
              alt="Dropdown Icon"
              class="h-4 w-4"
              onclick="toggleDropdown()"
            />
          </button>
          <button class="flex items-center text-gray-700 ml-4">
            <img src="/images/cart.png" alt="Dropdown Icon" class="h-6 w-6" />
            <a href="/user/cartPage"><p class="pl-2 pr-2">Cart</p></a>
          </button>
          <div class="ml-2">
            <div
              id="dropdownMenu"
              class="absolute right-0 mt-8 w-48 bg-white border rounded-lg shadow-lg invisible"
            >
              <a
                href="/user/profilePage"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >My Profile</a
              >
              <a
                href="/user/orderPage"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >Orders</a
              >
              <a
                href="/user/wishListPage"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >WishList</a
              >
              <a
                href="/user/couponPage"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >Coupons</a
              >
              <% if( username !== 'Login' ) { %>
              <a
                href="/user/logout"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                >Logout</a
              >
              <% } %>
            </div>
          </div>
        </div>
      </nav>

      <div class="flex px-8 justify-between m-2 text-sm">
        <%for( const brand_name of brands ) { %>
        <a href="/user/filterPage"><%= brand_name %></a>
        <% } %>
      </div>
    </div>

    <!-- Main Content Section -->
    <main class="flex flex-row justify-start">
      <div class="w-1/5 flex flex-col shadow-2xl mt-6">
        <%- include('components/sidebar') %>
      </div>

      <div class="w-4/5 ml-3">
        <div class="flex my-6">
          <div class="w-full sm:w-3/4 bg-white px-10 py-10">
            <div class="flex justify-between border-b pb-8">
              <h1 class="font-semibold text-2xl">Order History</h1>
            </div>
            <div
              class="md:flex items-strech py-8 md:py-10 lg:py-8 border-t border-gray-50"
            >
              <div class="md:w-4/12 2xl:w-1/4 w-full">
                <img
                  src="https://i.ibb.co/6gzWwSq/Rectangle-20-1.png"
                  alt="Black Leather Purse"
                  class="h-full object-center object-cover md:block hidden"
                />
                <img
                  src="https://i.ibb.co/TTnzMTf/Rectangle-21.png"
                  alt="Black Leather Purse"
                  class="md:hidden w-full h-full object-center object-cover"
                />
              </div>
              <div
                class="md:pl-3 md:w-8/12 2xl:w-3/4 flex flex-col justify-center"
              >
                <p class="leading-3 text-black md:pt-0 pt-4">RF293</p>
                <div class="flex items-center justify-between w-full">
                  <p class="font-black leading-none text-black">
                    Luxe card holder
                  </p>
                </div>
                <p class="leading-3 text-black pt-2">Height: 10 inches</p>
                <p class="leading-3 text-black py-4">Color: Black</p>
                <p class="leading-3 text-black">
                  Composition: 100% calf leather
                </p>
                <div class="flex items-center justify-between pt-5">
                  <div class="flex itemms-center">
                    <p class="underline leading-3 text-black cursor-pointer">
                      Order Status
                    </p>
                    <p
                      class="leading-3 underline text-red-500 pl-5 cursor-pointer"
                    >
                      Cancel Order
                    </p>
                  </div>
                  <p class="text-base font-black leading-none text-gray-800">
                    Total Price
                  </p>
                  <p class="text-base font-black leading-none text-gray-800">
                    â‚¹300
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer Section -->
    <footer class="flex items-center justify-center bg-black text-white h-24">
      <p>@ 2024 Laptoptradecenter.com</p>
    </footer>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };
    </script>
  </body>
</html>
