<!-- Navbar Section -->
<div class="flex flex-col shadow-xl">
  <nav class="flex items-center justify-between p-6 bg-white">
    <div class="flex items-center">
      <img src="/images/Logo.png" alt="logoimage" class="h-8 w-8" />
      <a href="/user/homePage"
        ><p class="text-2xl font-sans font-medium ml-2">LTC</p></a
      >
    </div>

    <div class="flex items-center">
      <form
        class="relative border-solid border-2 border-gray-300 rounded-full w-96 flex items-center"
      >
        <svg
          class="absolute left-3 h-4 w-4 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 26 26"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-4.35-4.35m1.24-4.65a7.5 7.5 0 10-10.5 0 7.5 7.5 0 0010.5 0z"
          ></path>
        </svg>
        <input
          type="search"
          name="search"
          placeholder="Search"
          class="pl-10 pr-4 py-1 w-full rounded-full focus:outline-none focus:ring-2 focus:ring-black"
        />
      </form>
      <form action="" method="post" class="h-4 border"></form>

      <button class="flex items-center ml-4 text-gray-700">
        <img src="/images/user_icon.png" alt="User Icon" class="h-8 w-8" />
        <a href="/user/loginPage"><p class="pl-2 pr-2"><%=username%></p></a>
        <img
          src="/images/dropdown_icon.svg"
          alt="Dropdown Icon"
          class="h-4 w-4"
          onclick="toggleDropdown()"
        />
      </button>
      <button class="flex items-center text-gray-700 ml-4">
        <img src="/images/cart.png" alt="Dropdown Icon" class="h-6 w-6" />
        <a href="/user/cartPage"><p class="pl-2 pr-2">Cart</p></a>
      </button>
      <div class="ml-2">
        <div
          id="dropdownMenu"
          class="absolute right-0 mt-8 w-48 bg-white border rounded-lg shadow-lg invisible"
        >
          <a
            href="/user/profilePage"
            class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
            >My Profile</a
          >
          <a
            href="/user/orderPage"
            class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
            >Orders</a
          >
          <a
            href="/user/wishListPage"
            class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
            >WishList</a
          >
          <a
            href="/user/couponPage"
            class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
            >Coupons</a
          >
          <% if( username !== 'Login' ) { %>
          <a
            href="/user/logout"
            class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
            >Logout</a
          >
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="flex px-8 justify-between m-2 text-sm">
    <%for( const data of brands ) { %>
    <a href="/user/filterPage?id=<%=data.id%>&filter=brand"><%= data.brand_name %></a>
    <% } %>
  </div>
</div>
