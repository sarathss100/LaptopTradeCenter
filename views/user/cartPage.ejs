<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1; /* This will allow the main section to take up the remaining space */
      }
      footer {
        flex-shrink: 0; /* Prevents the footer from shrinking */
        height: 80px; /* Sets a consistent height for the footer */
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Navbar Section -->
    <%- include('components/navbar') %>

    <!-- Main Content Section -->
    <main class="flex flex-row justify-start">
      <div class="w-full ml-3">
        <div class="flex my-6">
          <div class="w-full sm:w-3/4 bg-white px-10 py-10">
            <div class="flex justify-between border-b pb-8">
              <h1 class="font-semibold text-2xl">Shopping Cart</h1>
            </div>
            <div
              class="md:flex items-strech py-8 md:py-10 lg:py-8 border-t border-gray-50"
            >
              <div class="md:w-4/12 2xl:w-1/4 w-full">
                <img
                  src="https://i.ibb.co/6gzWwSq/Rectangle-20-1.png"
                  alt="Black Leather Purse"
                  class="h-full object-center object-cover md:block hidden"
                />
                <img
                  src="https://i.ibb.co/TTnzMTf/Rectangle-21.png"
                  alt="Black Leather Purse"
                  class="md:hidden w-full h-full object-center object-cover"
                />
              </div>
              <div
                class="md:pl-3 md:w-8/12 2xl:w-3/4 flex flex-col justify-center"
              >
                <p class="leading-3 text-black md:pt-0 pt-4">RF293</p>
                <div class="flex items-center justify-between w-full">
                  <p class="font-black leading-none text-black">
                    Luxe card holder
                  </p>
                  <select
                    aria-label="Select quantity"
                    class="py-2 px-1 border border-gray-200 mr-6 focus:outline-none"
                  >
                    <option>01</option>
                    <option>02</option>
                    <option>03</option>
                  </select>
                </div>
                <p class="leading-3 text-black pt-2">Height: 10 inches</p>
                <p class="leading-3 text-black py-4">Color: Black</p>
                <p class="leading-3 text-black">
                  Composition: 100% calf leather
                </p>
                <div class="flex items-center justify-between pt-5">
                  <div class="flex itemms-center">
                    <p class="underline leading-3 text-black cursor-pointer">
                      Add to Wish List
                    </p>
                    <p
                      class="leading-3 underline text-red-500 pl-5 cursor-pointer"
                    >
                      Remove
                    </p>
                  </div>
                  <p class="text-base font-black leading-none text-gray-800">
                    ₹300
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div id="summary" class="w-full sm:w-1/4 md:w-1/2 px-8 py-10">
            <h1 class="font-semibold text-2xl border-b pb-8">Order Summary</h1>
            <div>
              <label class="font-medium inline-block mb-3 text-sm uppercase">
                Shipping Address
              </label>
              <select class="block p-2 text-gray-600 w-full text-sm">
                <option>Address 1</option>
                <option>Address 2</option>
              </select>
            </div>
            <div class="py-10">
              <label
                for="promo"
                class="font-semibold inline-block mb-3 text-sm uppercase"
              >
                Coupon Code
              </label>
              <input
                type="text"
                id="promo"
                placeholder="Enter your code"
                class="p-2 text-sm w-full border"
              />
            </div>
            <button
              class="bg-red-500 hover:bg-red-600 px-5 py-2 text-sm text-white uppercase"
            >
              Apply
            </button>
            <div class="border-t mt-8">
              <div class="flex justify-between py-6">
                <span>Total cost</span>
                <span>₹600</span>
              </div>
              <form action="/user/checkOutPage" method="get">
                <button
                  class="bg-submit-button font-semibold hover:bg-green-600 py-3 text-sm text-white uppercase w-full"
                >
                  Checkout
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer Section -->
    <%- include('components/footer') %>

    <!-- JavaScript for Dropdown Toggle -->
    <script>
      const toggleDropdown = function () {
        const dropDownmenu = document.getElementById("dropdownMenu");
        dropDownmenu.classList.toggle("invisible");
      };
    </script>
  </body>
</html>
