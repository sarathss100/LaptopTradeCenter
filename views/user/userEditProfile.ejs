<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LTC</title>
    <link rel="stylesheet" href="/stylesheet/admin/adminLoginOutput.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.png" />
    <style>
      .input-field {
        padding: 10px;
        border-radius: 9999px;
      }

      .submit-button {
        padding: 12px 24px;
        border-radius: 9999px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1; /* This will allow the main section to take up the remaining space */
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Navbar Section -->
    <%- include('components/navbar') %>

    <!-- Main Content Section -->
    <main class="flex flex-row justify-start">
      <%- include('components/sidebar') %>

      <div class="w-4/5 m-6">
        <form action="editProfileForm" method="post">
          <div class="grid grid-cols-1 gap-4 mb-4">
            <div>
              <label for="first_name" class="block text-gray-700"
                >First Name</label
              >
              <input
                type="text"
                name="first_name"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].first_name%>"
                required
              />
            </div>
            <div>
              <label for="second_name" class="block text-gray-700"
                >Second Name</label
              >
              <input
                type="text"
                name="second_name"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].second_name%>"
                required
              />
            </div>
            <div>
              <label for="phone_number" class="block text-gray-700"
                >Phone Number</label
              >
              <input
                type="text"
                name="phone_number"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].phone_number%>"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700">Email</label>
              <input
                type="text"
                name="email"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].email%>"
                required
              />
            </div>
          </div>
          <button
            type="submit"
            class="bg-submit-button text-white px-4 py-2 shadow-xl rounded"
          >
            Update Details
          </button>
        </form>
      </div>
    </main>

    <!-- Footer Section -->
    <%- include('components/footer') %>

    <!-- JavaScript for Dropdown Toggle -->
    <script></script>
  </body>
</html>
