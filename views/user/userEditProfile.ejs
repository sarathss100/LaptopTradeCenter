<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Header section boiler plate -->
    <%- include('components/headboilerplate') %>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Navbar Section -->
    <%- include('components/navbar') %>

    <!-- Main Content Section -->
    <main class="flex flex-row flex-grow justify-start">
      <!-- Main Side Section -->
      <%- include('components/sidebar') %>

      <!-- Confirmation Modal -->
      <div
        id="confirmationModal"
        class="hidden fixed inset-0 p-4 flex flex-wrap justify-center items-center w-full h-full z-[1000] before:fixed before:inset-0 before:w-full before:h-full before:bg-[rgba(0,0,0,0.5)] overflow-auto font-[sans-serif]"
      >
        <div class="w-full max-w-lg bg-white shadow-lg rounded-lg p-6 relative">
          <div class="my-4 text-center">
            <h4 class="text-gray-800 text-base font-semibold mt-4">
              Are you sure you want to update the profile?
            </h4>

            <div class="text-center space-x-4 mt-8">
              <button
                id="cancelButton"
                type="button"
                class="px-4 py-2 rounded-lg text-gray-800 text-sm bg-gray-200 hover:bg-gray-300 active:bg-gray-200"
              >
                Cancel
              </button>
              <button
                id="confirmButton"
                type="button"
                class="px-4 py-2 rounded-lg text-white text-sm bg-red-600 hover:bg-red-700 active:bg-red-600"
              >
                Confirm
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Body Section -->
      <div class="w-4/5 m-6">
        <form id="editProfileForm" action="editProfileForm" method="post">
          <div class="grid grid-cols-1 gap-4 mb-4">
            <div>
              <label for="first_name" class="block text-gray-700"
                >First Name</label
              >
              <input
                type="text"
                name="first_name"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].first_name%>"
                required
              />
            </div>
            <div>
              <label for="second_name" class="block text-gray-700"
                >Second Name</label
              >
              <input
                type="text"
                name="second_name"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].second_name%>"
                required
              />
            </div>
            <div>
              <label for="phone_number" class="block text-gray-700"
                >Phone Number</label
              >
              <input
                type="text"
                name="phone_number"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].phone_number%>"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700">Email</label>
              <input
                type="text"
                name="email"
                class="w-full p-2 border shadow-xl rounded"
                value="<%=user[0].email%>"
                required
              />
            </div>
          </div>
          <button
            type="submit"
            class="bg-submit-button text-white px-4 py-2 shadow-xl rounded"
          >
            Update Details
          </button>
        </form>
      </div>
    </main>

    <!-- Footer Section -->
    <%- include('components/footer') %>

    <script>
      // Get elements
      const form = document.getElementById("editProfileForm");
      const modal = document.getElementById("confirmationModal");
      const cancelButton = document.getElementById("cancelButton");
      const confirmButton = document.getElementById("confirmButton");

      // Intercept form submission
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        modal.classList.remove("hidden");
      });

      // Cancel button event listener
      cancelButton.addEventListener("click", function () {
        modal.classList.add("hidden");
      });

      // Confirm button event listener
      confirmButton.addEventListener("click", function () {
        modal.classList.add("hidden");
        form.submit();
      });
    </script>
  </body>
</html>
